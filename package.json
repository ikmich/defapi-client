{
  "name": "defapi-client",
  "version": "1.0.0",
  "description": "Client server for viewing defapi api definitions",
  "main": "server/dist/index.js",
  "scripts": {
    "serve:dev": "ts-node-dev server/src/index.ts",
    "build": "npm run client:build && rm -rf server/dist && tsc",
    "build:dev": "NODE_ENV=development npm run client:build:dev && rm -rf server/dist && tsc",
    "serve:pm2:production": "pm2-runtime start ecosystem.config.js --env production",
    "stop:pm2": "pm2-runtime stop defapi-client",
    "client:build": "cd client && yarn build",
    "client:build:dev": "cd client && yarn build:dev",
    "client:dev": "cd client && yarn start"
  },
  "author": "Ikenna Agbasimalo <michfx@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^14.17.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "got": "^9.6.0",
    "pm2": "^5.1.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.8"
  },
  "keywords": [],
  "bugs": {
    "email": "michfx@gmail.com",
    "url": "https://github.com/ikmich/defapi-client/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ikmich/defapi-client"
  },
  "maintainers": [
    "Ikenna Agbasimalo <michfx@gmail.com>"
  ],
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 2
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
