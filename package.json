{
  "name": "defapi-client",
  "version": "1.0.0",
  "description": "Client server for viewing defapi api definitions",
  "main": "dist/server/index.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "build:dev": "NODE_ENV=development npm run build",
    "all:build": "(cd client && yarn client:build) && npm run build",
    "server:start:dev": "ts-node-dev ./src/server/server.ts",
    "server:start": "ts-node ./dist/server/server.js",
    "server:start:prod": "pm2-runtime ./ecosystem.config.js --env production",
    "server:stop:prod": "pm2 stop ./ecosystem.config.js"
  },
  "author": "Ikenna Agbasimalo <michfx@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@types/chalk": "^2.2.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^14.17.5",
    "@types/yargs": "^17.0.2",
    "chalk": "^3.0.0",
    "cliyargs": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "filewatcher": "^3.0.1",
    "fs-extra": "^10.0.0",
    "get-port": "^5.1.1",
    "got": "^9.6.0",
    "kill-port": "^1.6.1",
    "pm2": "^5.1.0",
    "typescript": "^4.3.5",
    "yargs": "^17.1.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.8"
  },
  "bin": {
    "defapi-client": "dist/cli/index.js"
  },
  "keywords": [],
  "bugs": {
    "email": "michfx@gmail.com",
    "url": "https://github.com/ikmich/defapi-client/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ikmich/defapi-client"
  },
  "maintainers": [
    "Ikenna Agbasimalo <michfx@gmail.com>"
  ],
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 2
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
